{{- if eq .osid "linux-fedora" -}}

#!/bin/bash

set -eufo pipefail
if ! dnf copr list | grep -q jdxcode/mise; then
  sudo dnf copr enable -y jdxcode/mise
fi
sudo dnf install -y mise

{{ if .personal -}}
MISE_GITHUB_TOKEN={{ (bitwarden "item" "gh_access_token").notes | trim }}
mise install --yes
{{ end -}}

{{ end -}}
